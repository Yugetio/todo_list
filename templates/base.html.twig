<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Todo list{% endblock %}</title>
    {% block stylesheets %}
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
      <link href="{{ asset('style/main.css') }}" rel="stylesheet" />
    {% endblock %}
  </head>
  <body class="container"> 
  {% block body %}

    <div class="btn-group menu" role="group">
      <button type="button" class="btn btn-secondary">List</button>
      <button type="button" class="btn btn-secondary">Create</button>
    </div>

    <form class="create-item">
      <div class="form-group">
        <label for="exampleInputEmail1">Text</label>
        <input type="text" class="form-control" name="text" placeholder="Some text">
      </div>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="ready">  ready
        </label>
      </div>
      <button type="button" class="btn btn-primary">Create</button>
    </form>

    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Text</th>
          <th></th>
          <th></th>
          <th></th>

        </tr>  
      </thead>
      <tbody>
        {% for obj in data %}
          <tr data-ready="{{ obj.ready }}">
            <td> {{ loop.index }} </td>
            <td> {{ obj.text }} </td>
            <td> <input type="checkbox" name="ready" id="{{ obj.id }}"> </td>
            <td>
              <button type="button" class="btn btn-primary edit">edit</button>
            </td>
            <td>
              <button type="button" class="btn btn-danger delete" id="{{ obj.id }}">Delete</button>
            </td>

          </tr>
        {% endfor %}

      </tbody>
    </table>

    {% endblock %}
    {% block javascripts %}
      <script src="{{ asset('script/main.js') }}"></script>
    {% endblock %}
  </body>
</html>