<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('style/main.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <h1>list</h1>
        {% block body %}
           <ul>
           {% for obj in data %}
              <li>
                {{ obj.id }}: {{ obj.text }},
                {% if obj.ready == '1' %} 
                    true
                {% else %}
                   false
                {% endif %}
              
              </li>
           {% endfor %}
            </ul>

        {% endblock %}
        {% block javascripts %}
            {# <script src="{{ asset('js/main.js') }}"></script> #}
        {% endblock %}
    </body>
</html>